<% if current_user %>
    <a id="demo" href="/demo_card">Send Demo Card</a>
	<p style="color:green">Signed in with Google.</p>
		<% if current_user.passes.count == 0 %>
			<p>The next 100 passes overhead won't be visible with the naked eye. We'll keep looking and notify you via Glass!</p>
		<% else %>
			<h3>Upcoming passes:</h3>
			<ul>	
			<% current_user.passes.each do |pass| %>
				<li><%= pass.risetime.to_s %></li>
			<% end %>
			</ul>
		<% end %>
<% else %>
	<div id="login"><%= link_to 'Log In With Google', sign_in_path %></div>
	
<% end %>
<script>
var mySwiper = new Swiper('.swiper-container',{
  pagination: '.pagination',
  paginationClickable: true,
  centeredSlides: true,
  slidesPerView: 'auto',
  watchActiveIndex: true
})
</script>